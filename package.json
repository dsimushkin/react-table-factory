{
  "name": "react-table-factory",
  "version": "0.2.4",
  "description": "React table factory HoC with a set of wrapper HoCs",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist",
    "styles"
  ],
  "author": "Simushkin Dmitry",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rollup -c",
    "prebuild": "rm -rf dist && rm -rf styles",
    "watch": "rollup -cw",
    "prewatch": "yarn prebuild",
    "prepare": "yarn build",
    "postpublish": "(cd demo && yarn deploy) && (git push && git push --tags)"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "latest",
    "react": "link:demo/node_modules/react",
    "rollup": "^1.16.7",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsimushkin/react-table-factory.git"
  },
  "bugs": {
    "url": "https://github.com/dsimushkin/react-table-factory/issues"
  },
  "homepage": "https://github.com/dsimushkin/react-table-factory#readme"
